{
  "name": "laradiodugaming-client",
  "version": "1.3.1",
  "description": "Le client officiel de LaRADIOdugaming.",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "keywords": [],
  "author": "Creeper",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.1.1",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "dotenv": "^16.1.4",
    "electron-log": "^4.4.8",
    "electron-updater": "^5.3.0"
  },
  "build": {
    "appId": "xyz.lsdg.radio-client",
    "productName": "LaRADIOdugaming Client",
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "shortcutName": "LaRADIOdugaming Client",
      "oneClick": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "LesalondugamingStudios",
        "repo": "client"
      }
    ],
    "extraFiles": [
      {
        "from": "src/assets",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
